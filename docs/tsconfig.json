{
	"extends": "../tsconfig",
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "public/types",
		"skipLibCheck": true,
		"module": "es2022",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"#composables": [
				"../src/composables"
			],
			"#components": [
				"../src/components"
			]
		}
	},
	"include": [
		"../src/**/composables.js"
	],
	"exclude": [
		"node_modules",
		"_dist/**",
		"**/node_modules/**",
		"**/dist",
		"**/public/**"
	],
	"typedocOptions": {
		"entryPoints": [
			"../src/"
		],
		"readme": "reference/index.md",
		"includeVersion": true,
		"out": "reference/typedoc/",
		"githubPages": false,
		"entryPointStrategy": "expand",
		"name": "Gun-Vue docs",
		"defaultCategory": "Composables",
		"exclude": [
			"**/routes.js",
			"**/index.js",
			"**/components.js",
			"**/composables.js",
			"**/app.js",
			"**/all-components.js",
			"**/worker.js"
		]
	}
}
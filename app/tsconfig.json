{
	"extends": "../tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"#composables": [
				"../src/composables"
			]
		}
	},
	"include": [
		"./src"
	]
}
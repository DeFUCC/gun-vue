{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "public/types",
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  },
  "include": [ "src/**/*"],
  "exclude": ["node_modules", "_dist/**","**/node_modules/**", "**/dist"]
}
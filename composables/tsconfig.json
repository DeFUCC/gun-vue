{
	"extends": "../tsconfig",
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "public/types",
		"skipLibCheck": true,
		"module": "ESNext",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"../src/**/composables.ts"
	],
	"exclude": [
		"node_modules",
		"_dist/**",
		"**/node_modules/**",
		"**/dist",
		"**/public/**"
	],
	"typedocOptions": {
		"entryPoints": [
			"../src/"
		],
		"includes": "../src/",
		"out": "docs/",
		"githubPages": false,
		"entryPointStrategy": "expand",
		"allReflectionsHaveOwnDocument": true,
		"name": "Gun-Vue composables",
		"defaultCategory": "Composables",
		"exclude": [
			"**/routes.ts",
			"**/index.ts",
			"**/components.ts",
			"**/composables.ts"
		]
	}
}
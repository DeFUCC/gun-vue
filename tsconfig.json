{
	"compilerOptions": {
		"strict": true,
		"target": "es2020",
		"moduleResolution": "node",
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "composables/public/types",
		"skipLibCheck": true,
		"module": "ESNext",
		"allowSyntheticDefaultImports": true
	},
	"vueCompilerOptions": {
		"plugins": ["@volar/vue-language-plugin-pug"]
	},
	"include": ["composables", "components"],
	"exclude": [
		"node_modules",
		"_dist/**",
		"**/node_modules/**",
		"**/dist",
		"**/public/**"
	],
	"typedocOptions": {
		"entryPoints": ["composables/src/index.ts"],
		"out": "app/public/composables"
	}
}

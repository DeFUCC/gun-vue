{
	"compilerOptions": {
		"target": "es2020",
		"moduleResolution": "node",
		"allowJs": true,
		"isolatedModules": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "composables/public/types",
		"skipLibCheck": true,
		"module": "ESNext",
		"allowSyntheticDefaultImports": true
	},
	"vueCompilerOptions": {
		"plugins": ["@volar/vue-language-plugin-pug"]
	},
	"include": ["composables", "components"],
	"exclude": [
		"node_modules",
		"_dist/**",
		"**/node_modules/**",
		"**/dist",
		"**/public/**"
	],
	"typedocOptions": {
		"entryPoints": ["composables/src/index.ts"],
		"out": "composables/docs/",
		"githubPages": false,
		"entryPointStrategy": "expand",
		"allReflectionsHaveOwnDocument": true,
		"readme": "composables/index.md",
		"name": "Gun-Vue composables"
	}
}

{
	"compilerOptions": {
		"target": "es2020",
		"moduleResolution": "node",
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "public/types",
		"skipLibCheck": true,
		"module": "ESNext",
		"allowSyntheticDefaultImports": true
	},
	"vueCompilerOptions": {
		"plugins": ["@volar/vue-language-plugin-pug"]
	},
	"include": ["composables", "components"],
	"exclude": ["node_modules", "_dist/**", "**/node_modules/**", "**/dist"],
	"typedocOptions": {
		"entryPoints": ["composables/src/index.ts"],
		"out": "composables/docs"
	}
}
